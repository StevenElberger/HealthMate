<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team9.healthmate.EditProfile" >
    <TextView
    android:id="@+id/edit_profile_label"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="@string/edit_profile_label"
    />
    <LinearLayout
        android:id="@+id/name_fields"
	    android:orientation="horizontal" 
        android:paddingLeft="4.0dip" 
        android:paddingTop="5.0dip" 
        android:paddingRight="4.0dip" 
        android:paddingBottom="1.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_below="@+id/edit_profile_label">
	    <EditText
	    android:id="@+id/first_name"
	    android:layout_weight="1"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:hint="@string/first_name"
	    />
	   	<EditText
	    android:id="@+id/last_name"
	    android:layout_weight="1"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:hint="@string/last_name"
	    />
    </LinearLayout>
   	<EditText 
    android:id="@+id/username"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_below="@+id/name_fields"
    android:hint="@string/username"
    />
   	<LinearLayout
        android:id="@+id/passwords"
	    android:orientation="horizontal" 
        android:paddingLeft="4.0dip" 
        android:paddingTop="5.0dip" 
        android:paddingRight="4.0dip" 
        android:paddingBottom="1.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_below="@+id/username">
	   	<EditText 
	    android:id="@+id/password"
	    android:layout_weight="1"
		android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:hint="@string/password"
	    android:inputType="textPassword"
	    />
	   	<EditText 
	    android:id="@+id/confirm_password"
	    android:layout_weight="1"
		android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:hint="@string/confirm_password"
	    android:inputType="textPassword"
	    />
   	</LinearLayout>
   	<LinearLayout
        android:id="@+id/input_sex"
	    android:orientation="horizontal" 
        android:paddingLeft="4.0dip" 
        android:paddingTop="5.0dip" 
        android:paddingRight="4.0dip" 
        android:paddingBottom="1.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_below="@+id/passwords">
	   	<TextView
	    android:id="@+id/enter_sex"
	    android:layout_weight="1"
		android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="@string/enter_sex"
	    />
	   	<Spinner
		android:id="@+id/sex"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:gravity="center"
		android:layout_height="wrap_content"
		/>
	</LinearLayout>
   	<TextView
    android:id="@+id/enter_bday"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/input_sex"
    android:text="@string/enter_bday"
    />
   	<LinearLayout
    android:id="@+id/bday_confirm"
 	android:orientation="horizontal" 
    android:paddingLeft="4.0dip" 
    android:paddingTop="5.0dip" 
    android:paddingRight="4.0dip" 
    android:paddingBottom="1.0dip" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_below="@+id/enter_bday">
	   	<DatePicker
	   	android:id="@+id/bday"
	   	android:calendarViewShown="false"
	   	android:endYear="2014"
	   	android:maxDate="01/01/2014"
	   	android:minDate="01/01/1900"
	   	android:spinnersShown="true"
	   	android:startYear="1900"
	   	android:layout_weight="5"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:gravity="start"
	    />
	   	<Button
	    android:id="@+id/create_account_button"
	    android:layout_weight="1"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_gravity="center_vertical"
	    android:text="@string/ok"
	    />
	</LinearLayout>
</RelativeLayout>